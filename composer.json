{
    "name": "tusker/tusker",
    "description": "simple mvc php framework",
    "type": "project",
    "require": {
        "php": "^8.2",
        "tusker/framework": "^1.0.1",
        "symfony/var-dumper": "^6.3",
        "twig/twig": "^3.0",
        "doctrine/orm": "^2.15",
        "symfony/cache": "^6.3",
        "doctrine/migrations": "^3.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.16"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Tusker\\App\\": "src/"
        },
        "files": [
            "helper/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Akash Patel",
            "email": "akashp.customizebook@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "@test:phpunit",
            "@test:phpstan",
            "@test:cs"
        ],
        "test:phpunit": "./vendor/bin/phpunit -c phpunit.xml",
        "test:phpstan": "vendor/bin/phpstan analyse -c phpstan.neon",
        "test:cs": "./vendor/bin/php-cs-fixer fix --dry-run --diff --allow-risky=yes"
    }
}
